<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aukde.food.aukdeliver">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="aukde.food.aukdeliver.paquetes.Utils.ApplicationCronometro"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:grantUriPermissions="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="aukde.food.aukdeliver.paquetes.Reportes.ReporteAukdeliver"
            android:screenOrientation="portrait" />

        <activity
            android:name="aukde.food.aukdeliver.paquetes.Menus.Perfiles.PerfilAukdeliver"
            android:parentActivityName="aukde.food.aukdeliver.paquetes.Menus.MenuAukdeliver"
            android:screenOrientation="portrait" />

        <service
            android:name="aukde.food.aukdeliver.paquetes.Servicios.JobServiceMonitoreo"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <service
            android:name="aukde.food.aukdeliver.paquetes.Servicios.ForegroundServiceCronometro"
            android:enabled="true"
            android:exported="true" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name="aukde.food.aukdeliver.paquetes.Actividades.Notificacion"/>

        <activity android:name=".paquetes.Actividades.Pedidos.DetallePedidoAukdeliver"/>

        <receiver
            android:name="aukde.food.aukdeliver.paquetes.Receptor.AcceptReceiver"
            android:enabled="true" />
        <receiver
            android:name="aukde.food.aukdeliver.paquetes.Receptor.CancelReceiver"
            android:enabled="true" />
        <receiver
            android:name="aukde.food.aukdeliver.paquetes.Receptor.NetworkReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name="aukde.food.aukdeliver.paquetes.Receptor.GpsReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.location.GPS_ENABLED_CHANGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <service android:name="aukde.food.aukdeliver.paquetes.Servicios.MyFirebaseMessagingClient">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name="aukde.food.aukdeliver.paquetes.Actividades.Pedidos.ListaPedidosAukdeliver"
            android:parentActivityName="aukde.food.aukdeliver.paquetes.Menus.MenuAukdeliver"
            android:screenOrientation="portrait" />
        <activity
            android:name="aukde.food.aukdeliver.paquetes.Menus.MenuAukdeliver"
            android:screenOrientation="portrait" />

        <activity
            android:name=".paquetes.Mapas.MapaClientePorLlamada"
            android:screenOrientation="portrait" />

        <activity
            android:name="aukde.food.aukdeliver.paquetes.Actividades.Logins.LoginAukdeliver"
            android:screenOrientation="portrait"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notificacion" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
    </application>

</manifest>