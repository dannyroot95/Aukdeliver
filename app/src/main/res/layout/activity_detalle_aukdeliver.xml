<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paquetes.Actividades.Usuarios.DetalleAukdeliver">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/photoDetalleAukdeliver"
            android:layout_gravity="center"
            android:src="@drawable/lista_admin"
            android:layout_height="200dp"/>

            <EditText
                android:id="@+id/detalleAukdeliverNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:elevation="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/futura"
                android:text="Nombre"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:elevation="16dp"
            android:id="@+id/btnEditarPerfilAukdeliver"
            android:src="@drawable/ic_check_white_24dp"
            android:layout_gravity="right"
            android:layout_marginTop="-30dp"
            android:layout_marginRight="12dp">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/scroll">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:id="@+id/linearTelefono"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:src="@drawable/detalle_apellido"
                                        android:layout_height="match_parent"/>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:textColorHint="#000"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/futura"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_height="wrap_content">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Apellidos"
                                            android:textColor="#000000"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/futura"
                                            android:textColorHint="#000"
                                            android:id="@+id/detalleAukdeliverApellido"
                                            android:inputType="text">

                                        </com.google.android.material.textfield.TextInputEditText>
                                    </com.google.android.material.textfield.TextInputLayout>

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="20dp"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:src="@drawable/detalle_usuario"
                                        android:layout_height="match_parent"/>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:textColorHint="#000"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/futura"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_height="wrap_content">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Usuario"
                                            android:textColor="#000000"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/futura"
                                            android:textColorHint="#000"
                                            android:id="@+id/detalleAukdeliverUsuario"
                                            android:inputType="text">

                                        </com.google.android.material.textfield.TextInputEditText>
                                    </com.google.android.material.textfield.TextInputLayout>

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="15dp"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:src="@drawable/detalle_correo"
                                        android:layout_height="match_parent"/>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:textColorHint="#000"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/futura"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_height="wrap_content">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Email"
                                            android:textColor="#000000"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/futura"
                                            android:textColorHint="#000"
                                            android:id="@+id/detalleAukdeliverCorreo"
                                            android:inputType="text">

                                        </com.google.android.material.textfield.TextInputEditText>
                                    </com.google.android.material.textfield.TextInputLayout>

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="15dp"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:src="@drawable/detalle_dni"
                                        android:layout_height="match_parent"/>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:textColorHint="#000"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/futura"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_height="wrap_content">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="DNI"
                                            android:textColor="#000000"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/futura"
                                            android:textColorHint="#000"
                                            android:id="@+id/detalleAukdeliverDni"
                                            android:inputType="text">

                                        </com.google.android.material.textfield.TextInputEditText>
                                    </com.google.android.material.textfield.TextInputLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="15dp"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:src="@drawable/ic_telefono"
                                        android:layout_height="match_parent"/>


                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:textColorHint="#000"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/futura"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_height="wrap_content">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Teléfono"
                                            android:textColor="#000000"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/futura"
                                            android:textColorHint="#000"
                                            android:id="@+id/detalleAukdeliverTelefono"
                                            android:inputType="text">

                                        </com.google.android.material.textfield.TextInputEditText>
                                    </com.google.android.material.textfield.TextInputLayout>


                                </LinearLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="15dp"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:src="@drawable/detalle_categoria_licencia"
                                        android:layout_height="match_parent"/>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:textColorHint="#000"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/futura"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_height="wrap_content">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Cat.Licencia"
                                            android:textColor="#000000"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/futura"
                                            android:textColorHint="#000"
                                            android:id="@+id/detalleAukdeliverCateL"
                                            android:inputType="text">

                                        </com.google.android.material.textfield.TextInputEditText>
                                    </com.google.android.material.textfield.TextInputLayout>


                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="15dp"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:src="@drawable/marcademoto"
                                        android:layout_height="match_parent"/>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:textColorHint="#000"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/futura"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_height="wrap_content">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Marca de moto"
                                            android:textColor="#000000"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/futura"
                                            android:textColorHint="#000"
                                            android:id="@+id/detalleAukdeliverMarcaMoto"
                                            android:inputType="text">

                                        </com.google.android.material.textfield.TextInputEditText>
                                    </com.google.android.material.textfield.TextInputLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="15dp"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:src="@drawable/placa_moto"
                                        android:layout_height="match_parent"/>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:textColorHint="#000"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/futura"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_height="wrap_content">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Placa"
                                            android:textColor="#000000"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/futura"
                                            android:textColorHint="#000"
                                            android:id="@+id/detalleAukdeliverPlaca"
                                            android:inputType="text">

                                        </com.google.android.material.textfield.TextInputEditText>
                                    </com.google.android.material.textfield.TextInputLayout>

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="15dp"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:src="@drawable/numero_licencia"
                                        android:layout_height="match_parent"/>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:textColorHint="#000"
                                        android:textColor="#000000"
                                        android:fontFamily="@font/futura"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_height="wrap_content">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Número de licencia"
                                            android:textColor="#000000"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/futura"
                                            android:textColorHint="#000"
                                            android:id="@+id/detalleAukdeliverNumeroLic"
                                            android:inputType="text">

                                        </com.google.android.material.textfield.TextInputEditText>
                                    </com.google.android.material.textfield.TextInputLayout>

                                </LinearLayout>
                            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/linearEditarPerfilAukdeliver"
                                android:layout_height="wrap_content">
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_marginRight="5dp"
                                    android:layout_height="wrap_content"
                                    android:text="Editar Perfil?"
                                    android:textColor="#ffffff"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/redondo"
                                    android:id="@+id/btnEditarAukdeliver"
                                    android:backgroundTint="@drawable/btn_background_negro"/>
                            </LinearLayout>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Ver reportes"
                                android:layout_marginLeft="5dp"
                                android:textColor="#ffffff"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/redondo"
                                android:backgroundTint="@drawable/btn_background_negro"/>
                        </LinearLayout>
                        </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>