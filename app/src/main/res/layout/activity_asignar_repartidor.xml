<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000"
    android:layout_height="match_parent"
    tools:context=".paquetes.Actividades.Pedidos.AsignarRepartidor">

  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_gravity="center"
      android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

      <ImageView
          android:layout_width="45dp"
          android:src="@drawable/lista_admin"
          android:layout_height="45dp"/>

      <TextView
          android:layout_width="wrap_content"
          android:text="Pedido"
          android:textSize="24sp"
          android:gravity="center"
          android:textStyle="bold"
          android:fontFamily="@font/futura"
          android:textColor="#fff"
          android:layout_marginRight="5dp"
          android:layout_height="wrap_content"/>

      <TextView
          android:layout_width="wrap_content"
          android:text="#"
          android:textSize="24sp"
          android:gravity="center"
          android:textStyle="bold"
          android:fontFamily="@font/futura"
          android:textColor="#fff"
          android:layout_height="wrap_content"/>

      <TextView
          android:id="@+id/numPedido"
          android:layout_width="wrap_content"
          android:gravity="center"
          android:textSize="24sp"
          android:fontFamily="@font/futura"
          android:textStyle="bold"
          android:textColor="#fff"
          android:inputType="number"
          android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="40dp"
        android:layout_marginTop="-15dp"
        android:layout_height="wrap_content">

      <com.github.florent37.shapeofview.shapes.RoundRectView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:elevation="4dp"
          app:shape_roundRect_bottomLeftRadius="10dp"
          app:shape_roundRect_bottomRightRadius="10dp"
          app:shape_roundRect_topLeftRadius="10dp"
          app:shape_roundRect_topRightRadius="10dp"

          app:shape_roundRect_borderColor="#f6f6f6"
          app:shape_roundRect_borderWidth="2dp"
          >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#fff"
            android:layout_height="match_parent">


          <LinearLayout
              android:layout_width="wrap_content"
              android:orientation="horizontal"
              android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Repartidor Actual : "
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/futura"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:id="@+id/txtRepartidorActual"
                android:textColor="#E74C3C"
                android:textStyle="bold"
                android:fontFamily="@font/futura"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"/>
          </LinearLayout>

          <LinearLayout
              android:layout_width="wrap_content"
              android:orientation="horizontal"
              android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Nuevo Repartidor : "
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/futura"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:id="@+id/txtRepartidor"
                android:textColor="#5bbd00"
                android:textStyle="bold"
                android:fontFamily="@font/futura"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"/>
          </LinearLayout>

          <LinearLayout
              android:layout_width="wrap_content"
              android:orientation="horizontal"
              android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Cambiar :"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/futura"
                android:textColor="#000"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/spinnerAukdeliver"
                android:spinnerMode="dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
          </LinearLayout>

          <!-- YOUR CONTENT -->
        </LinearLayout>
      </com.github.florent37.shapeofview.shapes.RoundRectView>

      <Button
          android:layout_width="match_parent"
          android:layout_margin="6dp"
          android:padding="10dp"
          android:layout_marginBottom="10dp"
          android:text="Asignar"
          android:layout_weight="1"
          android:textStyle="bold"
          android:textColor="#000"
          android:textSize="18sp"
          android:background="@drawable/redondo"
          android:backgroundTint="@drawable/btn_background_blanco"
          android:fontFamily="@font/futura"
          android:id="@+id/floatRegister"
          android:layout_height="wrap_content"/>

    </LinearLayout>




    <!-- ............... aqui inicializa.................................... -->






    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_margin="5dp"
          app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
          android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/scroll">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"
                android:orientation="horizontal">

              <TextView
                  android:layout_width="wrap_content"
                  android:textColor="#CD1300"
                  android:id="@+id/idEditPedido"
                  android:gravity="center"
                  android:textSize="14sp"
                  android:layout_height="wrap_content"/>

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_gravity="center"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                  <TextView
                      android:layout_width="wrap_content"
                      android:text="Hora del pedido"
                      android:textColor="#CD1300"
                      android:gravity="center"
                      android:textSize="14sp"
                      android:layout_height="wrap_content"/>

                  <TextView
                      android:id="@+id/horaPedido"
                      android:layout_width="wrap_content"
                      android:hint="00:00"
                      android:textColor="#000"
                      android:textStyle="bold"
                      android:textSize="14sp"
                      android:layout_height="wrap_content"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="Hora de entrega"
                      android:textColor="#0043C8"
                      android:textSize="14sp" />

                  <TextView
                      android:id="@+id/horaEntrega"
                      android:layout_width="wrap_content"
                      android:hint="00:00"
                      android:textColor="#000"
                      android:textSize="14sp"
                      android:textStyle="bold"
                      android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                  <TextView
                      android:layout_width="wrap_content"
                      android:text="Fecha del pedido"
                      android:gravity="center"
                      android:textColor="#CD1300"
                      android:textSize="14sp"
                      android:layout_height="wrap_content"/>

                  <TextView
                      android:id="@+id/fechaPedido"
                      android:layout_width="wrap_content"
                      android:hint="03/07/2020"
                      android:textColor="#000"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:textSize="14sp"
                      android:layout_height="wrap_content"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:text="Fecha de entrega"
                      android:gravity="center"
                      android:textColor="#0043C8"
                      android:textSize="14sp"
                      android:layout_height="wrap_content"/>

                  <TextView
                      android:id="@+id/fechaEntrega"
                      android:layout_width="wrap_content"
                      android:hint="03/07/2020"
                      android:textColor="#000"
                      android:gravity="center"
                      android:textSize="14sp"
                      android:textStyle="bold"
                      android:layout_height="wrap_content"/>

                </LinearLayout>
              </LinearLayout>
            </HorizontalScrollView>

            <!-- Linea de separación -->
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="1dp"/>
            <!-- fin Linea de separación -->
            <TextView
                android:layout_width="match_parent"
                android:text="Descripción del pedido"
                android:textColor="#000"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:text="Socio"
                      android:textSize="12dp"
                      android:textColor="#000"
                      android:layout_height="wrap_content"/>

                  <TextView
                      android:textSize="12dp"
                      android:textColor="#000"
                      android:layout_width="60dp"
                      android:id="@+id/lsSocio"
                      android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:text="Producto"
                      android:textSize="12dp"
                      android:textColor="#000"
                      android:layout_height="wrap_content"/>

                  <TextView
                      android:id="@+id/lsProducto"
                      android:layout_width="120dp"
                      android:layout_height="wrap_content"
                      android:textColor="#000"
                      android:gravity="center"
                      android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:text="Nota"
                      android:textSize="12dp"
                      android:textColor="#000"
                      android:layout_height="wrap_content"/>

                  <TextView
                      android:layout_width="100dp"
                      android:textSize="12dp"
                      android:textColor="#000"
                      android:gravity="center"
                      android:textAlignment="center"
                      android:id="@+id/lsDescripcion"
                      android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:text="Precio Unitario"
                      android:textSize="12dp"
                      android:gravity="center"
                      android:textColor="#000"
                      android:layout_height="wrap_content"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:textSize="12dp"
                      android:textColor="#000"
                      android:id="@+id/lsPUnitario"
                      android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:text="Cant."
                      android:textSize="12dp"
                      android:textColor="#000"
                      android:layout_height="wrap_content"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:textSize="12dp"
                      android:textColor="#000"
                      android:gravity="center"
                      android:id="@+id/lsCant"
                      android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:text="P.Total"
                      android:textSize="12dp"
                      android:textColor="#000"
                      android:layout_height="wrap_content"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:textSize="12dp"
                      android:textColor="#000"
                      android:gravity="center"
                      android:id="@+id/lsPTotal"
                      android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:text="Comisión"
                      android:textSize="12dp"
                      android:textColor="#000"
                      android:layout_height="wrap_content"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:textSize="12dp"
                      android:textColor="#000"
                      android:gravity="center"
                      android:id="@+id/lsComision"
                      android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="wrap_content"
                      android:text="Delivery"
                      android:textSize="12dp"
                      android:textColor="#000"
                      android:layout_height="wrap_content"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:textSize="12dp"
                      android:textColor="#000"
                      android:gravity="center"
                      android:id="@+id/lsPDelivery"
                      android:layout_height="wrap_content"/>
                </LinearLayout>
              </LinearLayout>
            </HorizontalScrollView>


            <!-- Linea de separación -->
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="1dp"/>
            <!-- fin Linea de separación -->


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

              <TextView
                  android:layout_width="wrap_content"
                  android:text="Total a pagar (Producto) : "
                  android:textColor="#000"
                  android:layout_marginLeft="10dp"
                  android:textSize="14sp"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:text="S/"
                  android:textColorHint="#ff0000"
                  android:textColor="#ff0000"
                  android:textStyle="bold"
                  android:textSize="14sp"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:text="0"
                  android:id="@+id/precioProductoTotal"
                  android:textColorHint="#ff0000"
                  android:textColor="#ff0000"
                  android:textStyle="bold"
                  android:textSize="14sp"
                  android:gravity="left"
                  android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

              <TextView
                  android:layout_width="wrap_content"
                  android:text="Ganancia por Delivery : "
                  android:textColor="#000"
                  android:layout_marginLeft="10dp"
                  android:textSize="12sp"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:text="S/"
                  android:textColor="#000"
                  android:textStyle="bold"
                  android:textSize="12sp"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:id="@+id/gananciaDelivery"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text="0"
                  android:textColor="#000"
                  android:textSize="12sp"
                  android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

              <TextView
                  android:layout_width="wrap_content"
                  android:text="Ganancia por Comisión : "
                  android:textColor="#000"
                  android:layout_marginLeft="10dp"
                  android:textSize="12sp"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:text="S/"
                  android:textColor="#000"
                  android:textSize="12sp"
                  android:textStyle="bold"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:text="0"
                  android:id="@+id/gananciaAdmin"
                  android:textColor="#000"
                  android:textStyle="bold"
                  android:textSize="12sp"
                  android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="1dp"/>
            <!-- fin Linea de separación -->

            <!-- Septimo segmento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

              <TextView
                  android:layout_width="wrap_content"
                  android:textSize="14sp"
                  android:text="Total a cobrar (Inc. Delivery) :"
                  android:textColor="#0B760B"
                  android:textStyle="bold"
                  android:layout_marginRight="10dp"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:hint="S/"
                  android:textColorHint="#0FA50F"
                  android:textColor="#0FA50F"
                  android:gravity="right"
                  android:textSize="14sp"
                  android:background="#00ffffff"
                  android:textStyle="bold"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:id="@+id/neto"
                  android:layout_width="wrap_content"
                  android:textColorHint="#0FA50F"
                  android:textColor="#0FA50F"
                  android:gravity="right"
                  android:textSize="14sp"
                  android:background="#00ffffff"
                  android:textStyle="bold"
                  android:layout_height="wrap_content"/>

            </LinearLayout>

            <!-- Linea de separación -->
            <View
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="1dp"/>
            <!-- fin Linea de separación -->

            <!-- Cuarto segmento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

              <TextView
                  android:layout_width="wrap_content"
                  android:textSize="14sp"
                  android:text="Nombre del cliente :"
                  android:textColor="#000000"
                  android:layout_marginRight="10dp"
                  android:layout_height="wrap_content"/>

              <EditText
                  android:layout_width="match_parent"
                  android:hint="Edward Lizaraso"
                  android:gravity="left"
                  android:inputType="textPersonName"
                  android:textSize="16sp"
                  android:id="@+id/nombreCliente"
                  android:textStyle="bold"
                  android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Linea de separación -->
            <View
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="1dp"/>
            <!-- fin Linea de separación -->

            <!-- Quinto segmento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

              <TextView
                  android:layout_width="wrap_content"
                  android:textSize="14sp"
                  android:text="Teléfono del cliente :"
                  android:textColor="#000000"
                  android:layout_marginRight="10dp"
                  android:layout_height="wrap_content"/>

              <EditText
                  android:id="@+id/telefonoCliente"
                  android:layout_width="wrap_content"
                  android:hint="992997223"
                  android:gravity="center_horizontal"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  android:maxLength="9"
                  android:inputType="number"
                  android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Linea de separación -->
            <View
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="1dp"/>
            <!-- fin Linea de separación -->

            <!-- Sexto segmento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

              <TextView
                  android:layout_width="wrap_content"
                  android:textSize="14sp"
                  android:text="Monto a pagar (Cliente) :"
                  android:textColor="#000000"
                  android:layout_marginRight="10dp"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:text="S/"
                  android:textColor="#000"
                  android:textSize="16sp"
                  android:background="#00ffffff"
                  android:textStyle="bold"
                  android:layout_height="wrap_content"/>

              <EditText
                  android:id="@+id/montoPagarcliente"
                  android:layout_width="wrap_content"
                  android:hint="0.00"
                  android:textSize="14sp"
                  android:textStyle="bold"
                  android:inputType="numberDecimal"
                  android:layout_height="wrap_content"/>
            </LinearLayout>



            <!-- Linea de separación -->
            <View
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="1dp"/>
            <!-- fin Linea de separación -->

            <!-- Octavo segmento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

              <TextView
                  android:layout_width="wrap_content"
                  android:textSize="14sp"
                  android:text="Vuelto"
                  android:textColor="#000000"
                  android:layout_marginRight="25dp"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:id="@+id/vuelto"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="25dp"
                  android:background="#00ffffff"
                  android:hint="S/0.00"
                  android:textColor="#900C3F"
                  android:textSize="14sp"
                  android:textStyle="bold" />

            </LinearLayout>

            <!-- Linea de separación -->
            <View
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="1dp"/>
            <!-- fin Linea de separación -->

            <!-- Noveno segmento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:text="Dirección :"
                    android:textColor="#000000"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/direcionCliente"
                    android:layout_width="match_parent"
                    android:hint="Presione el boton Mapear"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:text="latitud:"
                    android:textColor="#000000"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:text=""
                    android:id="@+id/txtLatitud"
                    android:textColor="#000000"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"/>

              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_gravity="center"
                  android:layout_height="wrap_content">

              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:text="longitud:"
                    android:textColor="#000000"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtLongitud"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:text=""
                    android:textColor="#000000"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"/>
              </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">

              <ImageView
                  android:layout_width="20dp"
                  android:src="@drawable/referencia"
                  android:layout_height="40dp"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:textSize="14sp"
                  android:text="Referencia :"
                  android:textStyle="bold"
                  android:fontFamily="@font/futura"
                  android:textColor="#000000"
                  android:layout_marginLeft="5dp"
                  android:layout_height="wrap_content"/>

              <EditText
                  android:id="@+id/referenciaCliente"
                  android:layout_width="match_parent"
                  android:hint="Al costado de aukde"
                  android:gravity="center"
                  android:textColor="#000"
                  android:fontFamily="@font/futura"
                  android:textSize="14sp"
                  android:textStyle="bold"
                  android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Linea de separación -->
            <View
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="1dp"/>
            <!-- fin Linea de separación -->

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:layout_height="0dp">

              <TextView
                  android:layout_width="wrap_content"
                  android:textSize="14sp"
                  android:text="ID repartidor : "
                  android:textColor="#000000"
                  android:layout_marginRight="10dp"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:textSize="12sp"
                  android:id="@+id/txtIdAukdeliver"
                  android:textColor="#5bbd00"
                  android:layout_marginRight="10dp"
                  android:layout_height="wrap_content"/>

            </LinearLayout>



            <!-- Linea de separación -->
            <View
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="1dp"/>
            <!-- fin Linea de separación -->

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

              <TextView
                  android:layout_width="wrap_content"
                  android:text="Estado :"
                  android:layout_marginRight="10dp"
                  android:textColor="#000"
                  android:textSize="14sp"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:id="@+id/txtEstado"
                  android:hint="........"
                  android:textSize="14sp"
                  android:textStyle="bold"
                  android:layout_marginRight="10dp"
                  android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Linea de separación -->
            <View
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="1dp"/>
            <!-- fin Linea de separación -->

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_height="wrap_content">
            </LinearLayout>
          </LinearLayout>
        </ScrollView>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_gravity="bottom|start"
      android:layout_margin="6dp"
      android:layout_height="wrap_content">

  </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>