<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".paquetes.Productos.Solicitud.MenuListaDeSolicitudes">

    <include layout="@layout/toolbar3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <GridLayout
        android:columnCount="1"
        android:columnOrderPreserved="false"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#E8FCFC"
            android:padding="22dp">

            <Button
                android:layout_width="80dp"
                android:id="@+id/btnListaSolicitudDelivery"
                android:gravity="center"
                android:background="@drawable/btn_lista_deliverys"
                android:layout_height="80dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Lista de Solicitud de Delivery"
                android:fontFamily="@font/futura"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#F1E8FC"
                android:padding="22dp">

                <Button
                    android:layout_width="80dp"
                    android:id="@+id/btnListaSolicitudProducto"
                    android:gravity="center"
                    android:background="@drawable/btn_solicitud_producto"
                    android:layout_height="80dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Lista de Solicitud de Productos"
                    android:fontFamily="@font/futura"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

</LinearLayout></LinearLayout>