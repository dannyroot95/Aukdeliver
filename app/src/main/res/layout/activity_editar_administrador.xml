<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Editar_Administrador">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <com.github.florent37.shapeofview.shapes.CutCornerView
            android:id="@+id/clipCorner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:elevation="4dp"
            android:backgroundTint="#B00000"
            android:background="#B00000"
            app:shape_cutCorner_bottomLeftSize="20dp"
            app:shape_cutCorner_bottomRightSize="20dp"
            >
            <View
                android:layout_width="match_parent"
                android:background="#B00000"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:src="@drawable/lista_admin"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Editar Administrador "
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:fontFamily="@font/futura"
                    android:background="#B00000"
                    android:textColor="#fff"
                    android:layout_marginLeft="2dp"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </com.github.florent37.shapeofview.shapes.CutCornerView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#CD1300"
                android:id="@+id/idEditAdministrador"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/futura"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#CD1300"
                android:id="@+id/idEditPedidoAdministrador"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/futura"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/scroll">


            </ScrollView>

        </LinearLayout>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>