<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colorosagradient"
    tools:context=".paquetes.Menus.MenuProveedor">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="22sp"
                android:id="@+id/txtNombres"
                android:text="Cargando...."
                android:textColor="#fff"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/txtEmail"
                android:layout_marginTop="6dp"
                android:layout_below="@id/txtNombres"
                android:textStyle="bold"
                android:text="Usuario Proveedor"
                android:textColor="#fff">

            </TextView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_height="62dp"
                android:id="@+id/fotodefault"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="2dp"
                android:clickable="true"
                android:onClick="show_popup"
                android:background="@drawable/ic_admin"
                android:foreground="@drawable/selecion"
                android:layout_alignParentRight="true"
                android:layout_width="62dp"
                />

        </RelativeLayout>

        <GridLayout
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="match_parent"
                    android:backgroundTint="#fff"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/iconuser_proveedor"
                    android:padding="27sp"
                    android:gravity="left"
                    android:background="@drawable/notanredondo"
                    android:layout_margin="10dp"
                    android:layout_height="80dp"
                    android:text="                Mi perfil"/>

                <Button
                    android:layout_width="match_parent"
                    android:backgroundTint="#fff"
                    android:textSize="18sp"
                    android:padding="27sp"
                    android:gravity="left"
                    android:drawableLeft="@drawable/lista_proveedor"
                    android:background="@drawable/notanredondo"
                    android:layout_margin="10dp"
                    android:layout_height="80dp"
                    android:text="         Lista de pedidos"/>



            </LinearLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView>