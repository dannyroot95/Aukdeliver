<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:background="@drawable/colorosagradient"
    tools:context=".paquetes.Menus.MenuProveedor">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:id="@+id/txtEmpresa"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:fontFamily="@font/futura"
                android:text=""
                android:textColor="#fff">
            </TextView>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="match_parent"
                android:id="@+id/shimmer"
                app:shimmer_duration="800"
                android:layout_below="@id/txtEmpresa"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearShimmer"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/txtNombres"
                        android:text=""
                        android:textStyle="bold"
                        android:fontFamily="@font/futura"
                        android:textColor="#fff"
                        android:layout_marginRight="3dp"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/txtApellidos"
                        android:textStyle="bold"
                        android:fontFamily="@font/futura"
                        android:textColor="#fff"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>



            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_height="62dp"
                android:id="@+id/fotodefault"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="2dp"
                android:clickable="true"
                android:onClick="show_popup"
                android:background="@drawable/ic_admin"
                android:foreground="@drawable/selecion"
                android:layout_alignParentRight="true"
                android:layout_width="62dp"
                />


        </RelativeLayout>

        <GridLayout
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="#F9F9F9"
                    android:padding="16dp">

                    <Button
                        android:layout_width="80dp"
                        android:id="@+id/btnPerfil"
                        android:gravity="center"
                        android:background="@drawable/btn_user"
                        android:layout_height="80dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Mi Perfil"
                        android:fontFamily="@font/futura"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="#F9F9F9"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:gravity="center"
                        android:layout_height="80dp">

                        <Button
                            android:layout_width="80dp"
                            android:gravity="center"
                            android:id="@+id/btnListaPedidosAukdeliver"
                            android:background="@drawable/miproducto"
                            android:layout_height="80dp"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Mis productos"
                        android:textSize="16sp"
                        android:fontFamily="@font/futura"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="#F9F9F9"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:gravity="center"
                        android:layout_height="80dp">

                        <Button
                            android:layout_width="80dp"
                            android:gravity="center"
                            android:id="@+id/btnAgregarProducto"
                            android:background="@drawable/btn_lista_pedidos"
                            android:layout_height="80dp"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Agregar\nProductos"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:fontFamily="@font/futura"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="#F9F9F9"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:gravity="center"
                        android:layout_height="80dp">

                        <Button
                            android:layout_width="80dp"
                            android:gravity="center"
                            android:id="@+id/btnSolicitarDelivery"
                            android:background="@drawable/btn_lista_pedidos"
                            android:layout_height="80dp"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Solicitar\nDelivery"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:fontFamily="@font/futura"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>



    </LinearLayout>

</LinearLayout>