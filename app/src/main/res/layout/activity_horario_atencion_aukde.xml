<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="235dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#E4D8E4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <TextView
            android:id="@+id/txtClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="#000"
            android:text="X"
            android:textSize="20dp"
            android:textStyle="bold"
            android:elevation="50dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:layout_marginTop="0dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ajustes de Horario"
                    android:textSize="29dp"
                    android:textStyle="bold"
                    android:textColor="#000"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"

            >
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/reloj"
                    android:layout_gravity="center">
                </ImageView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="130dp"
            >
            <Button
                android:id="@+id/horaApertura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora de Apertura:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <EditText
                android:id="@+id/horaAtencion"
                android:layout_width="wrap_content"
                android:hint=" 00:00"
                android:layout_marginLeft="5dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:fontFamily="@font/futura"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="180dp"
            >
            <Button
                android:id="@+id/HoradeCierre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora de Cierre:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/horaCierre"
                android:layout_width="wrap_content"
                android:hint=" 00:00"
                android:layout_marginLeft="5dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:fontFamily="@font/futura"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="180dp">
            <Button
                android:id="@+id/botonHorario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>