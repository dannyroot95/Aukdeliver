<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_black_close"
        android:layout_marginTop="7dp"
        android:elevation="5dp"
        android:id="@+id/closeDialog"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#FF0000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Repartidor Ocupado!"
                android:textColor="#fff"
                android:fontFamily="@font/futura"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_height="wrap_content"/>
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_moto"
                android:layout_marginBottom="10dp"
                android:layout_height="120dp"/>
            <TextView
                android:layout_width="match_parent"
                android:fontFamily="@font/futura"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textSize="16dp"
                android:text="Asigne un nuevo repartidor ó espere a \nQue el repartidor complete el pedido."
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
            <Button
                android:layout_width="200dp"
                android:background="@drawable/redondo"
                android:layout_weight="1"
                android:textColor="#fff"
                android:text="Cerrar"
                android:layout_marginRight="12dp"
                android:id="@+id/btnCerrarDialog"
                android:backgroundTint="@drawable/btn_background_negro"
                android:layout_height="wrap_content"/>

                <Button
                    android:layout_width="200dp"
                    android:background="@drawable/redondo"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:text="Forzar envío"
                    android:id="@+id/btnForzarEnvio"
                    android:backgroundTint="@drawable/btn_background_negro"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>